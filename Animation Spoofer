local awesomeHoverSound = Instance.new("Sound")
awesomeHoverSound.Name = "UISFX"
awesomeHoverSound.SoundId = "rbxassetid://10066936758"
awesomeHoverSound.Parent = AlrightThisIsAwesome

local awesomeClickSound = Instance.new("Sound")
awesomeClickSound.Name = "UISFX"
awesomeClickSound.SoundId = "rbxassetid://6214955871"
awesomeClickSound.Parent = AlrightThisIsAwesome

local targetCharacter = Instance.new("ObjectValue")
targetCharacter.Name = "targetCharacter"
targetCharacter.Value = game.Players.LocalPlayer.Character
targetCharacter.Parent = AlrightThisIsAwesome


Close.MouseButton1Click:Connect(function()
	AlrightThisIsAwesome:Remove()
	local hint = Instance.new("Hint")
	hint.Text = 'Please reexecute to open the GUI again.'
	hint.Parent = workspace
	wait(3)
	hint:Remove()
end)

Clear.MouseButton1Click:Connect(function()
	awesomeClickSound:Play()
	for i, item in ipairs(ScrollingFrame:GetChildren()) do
		if not item:IsA("UIListLayout") then
			item:Remove()
		end
	end
end)

Scan.MouseButton1Click:Connect(function()
	awesomeClickSound:Play()
	if Bool.Value == true then
		Bool.Value = false
		local hint = Instance.new("Hint")
		hint.Text = 'Auto-Scanning is now off'
		hint.Parent = workspace
		wait(3)
		hint:Remove()
	else
		Bool.Value = true
		local hint = Instance.new("Hint")
		hint.Text = 'Auto-Scanning is now on'
		hint.Parent = workspace
		wait(3)
		hint:Remove()
	end
end)

Dragging.MouseButton1Click:Connect(function()
	awesomeClickSound:Play()
	if Bool2.Value == true then
		Bool2.Value = false
		FrameMove.Draggable = false
		--FrameMove.Interactable = false
		--FrameMove.Active = false
		local hint = Instance.new("Hint")
		hint.Text = 'Draggable UI is now off'
		hint.Parent = workspace
		wait(3)
		hint:Remove()
	else
		Bool2.Value = true
		FrameMove.Draggable = true
		--FrameMove.Interactable = true
		--FrameMove.Active = true
		local hint = Instance.new("Hint")
		hint.Text = 'Draggable UI is now off'
		hint.Parent = workspace
		wait(3)
		hint:Remove()
	end
end)

TextBox:GetPropertyChangedSignal("Text"):Connect(function()
	local newTarget = workspace:FindFirstDescendant(TextBox.Text)
	if newTarget and newTarget:IsA("Model") then
		targetCharacter.Value = newTarget
	else
		local hint = Instance.new("Hint")
		hint.Text = "Couldn't find name of player: "..TextBox.Text
		hint.Parent = workspace
		wait(3)
		hint:Remove()
	end
end)


game:GetService("UserInputService").InputBegan:Connect(function(input)
	if input.KeyCode == Enum.KeyCode.LeftAlt then
		AlrightThisIsAwesome.Enabled = true
		awesomeClickSound:Play()
	end
end)

for i, button in ipairs(AlrightThisIsAwesome:GetDescendants()) do
	if button:IsA("GuiButton") then
		button.MouseEnter:Connect(function()
			awesomeHoverSound:Play()
		end)
		
		button.MouseLeave:Connect(function()
			awesomeHoverSound:Play()
		end)
	end
end

while true do
	wait(0.1)
	for i, playingAnim in ipairs(targetCharacter.Value.Humanoid:GetPlayingAnimationTracks()) do
		if not ScrollingFrame:FindFirstChild(playingAnim.Animation.AnimationId) and Bool.Value == true then
			local desc = playingAnim.Animation
			local itemFrame = Instance.new("Frame")
			itemFrame.Name = desc.AnimationId
			itemFrame.BackgroundColor3 = Color3.new(0.164706, 0.160784, 0.188235)
			itemFrame.Size = UDim2.new(.93,0,.035,0)
			itemFrame.Parent = ScrollingFrame
			local textBox = Instance.new("TextBox")
			textBox.ClearTextOnFocus = false
			textBox.BackgroundTransparency = 1
			textBox.TextColor3 = Color3.new(1, 1, 1)
			textBox.TextEditable = false
			textBox.TextScaled = true
			textBox.Size = UDim2.new(1, 0, 1, 0)
			textBox.Parent = itemFrame
			textBox.Text = desc.Name .. " (" .. desc.AnimationId .. ")"
		end
	end
end
