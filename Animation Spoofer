Sound:Play()
game:GetService("TweenService"):Create(Sound, TweenInfo.new(1.5, Enum.EasingStyle.Quad, Enum.EasingDirection.InOut), {Volume = 1}):Play()
game:GetService("TweenService"):Create(Frame, TweenInfo.new(1.5, Enum.EasingStyle.Quad, Enum.EasingDirection.InOut), {Size = UDim2.new(0.305, 0,0.236, 0)}):Play()
game:GetService("TweenService"):Create(Frame, TweenInfo.new(1.5, Enum.EasingStyle.Quad, Enum.EasingDirection.InOut), {Position = UDim2.new(0.5, 0,0.5, 0)}):Play()
wait(math.random(6.5,8))
game:GetService("TweenService"):Create(Sound, TweenInfo.new(1.5, Enum.EasingStyle.Quad, Enum.EasingDirection.InOut), {Volume = 0}):Play()
game:GetService("TweenService"):Create(Frame, TweenInfo.new(1.5, Enum.EasingStyle.Quad, Enum.EasingDirection.InOut), {Size = UDim2.new(0.305, 0,0, 0)}):Play()
game:GetService("TweenService"):Create(Frame, TweenInfo.new(1.5, Enum.EasingStyle.Quad, Enum.EasingDirection.InOut), {Position = UDim2.new(0.5, 0,0.617, 0)}):Play()
wait(1.5)
OpeningGui:Remove()

